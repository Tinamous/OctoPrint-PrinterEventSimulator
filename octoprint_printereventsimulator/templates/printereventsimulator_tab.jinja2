<div class="row-fluid">
    <h3>Printer Communication Events</h3>
    <div class="form-inline">
        <button class="btn btn-block control-box" data-bind="click: connecting">Connecting</button>
        <button class="btn btn-block control-box" data-bind="click: connected">Connected</button>

        <button class="btn btn-block control-box" data-bind="click: disconnecting">Disconnecting</button>
        <button class="btn btn-block control-box" data-bind="click: disconnected">Disconnected</button>

        <button class="btn btn-block control-box" data-bind="click: printerError">Error</button>
        <!-- Need state_id and state_string -->
        <div class="form-group">
            <label for="" class="sr-only">PrinterStateChanged</label>
            <select class="form-control" data-bind="options: stateOptions, value: selectedOption"></select>
            <button class="btn btn-block control-box form-control" data-bind="click: printerStateChanged">PrinterStateChanged</button>
        </div>
    </div>
</div>

<div class="row-fluid">
    <h3>Printing Events</h3>
    <button class="btn btn-block control-box" data-bind="click: printStarted">PrintStarted</button>
    <button class="btn btn-block control-box" data-bind="click: printFailed">PrintFailed</button>
    <button class="btn btn-block control-box" data-bind="click: printDone">PrintDone</button>
    <button class="btn btn-block control-box" data-bind="click: printCancelled">PrintCancelled</button>
    <button class="btn btn-block control-box" data-bind="click: printPaused">PrintPaused</button>
    <button class="btn btn-block control-box" data-bind="click: printResumed">PrintResumed</button>
</div>

<div class="row-fluid">
    <h3>OctoPrint Event History</h3>
    <table class="table">
        <thead>
            <tr>
                <th>Event</th>
                <th>Payload</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: eventHistory">
            <tr>
                <td data-bind="text:name"></td>
                <td data-bind="text:payload"></td>
            </tr>
        </tbody>
    </table>
</div>
